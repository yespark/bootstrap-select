name: lint
on: [push, pull_request]
jobs:
  run-lint:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        node: ['18', '20' ]
    name: Node ${{ matrix.node }} test
    steps:
      - uses: actions/checkout@main
      - name: Setup node
        uses: actions/setup-node@main
        with:
          node-version: ${{ matrix.node }}
          cache: 'npm'
      - name: Install dependencies
        run: npm ci
      - name: Run lint
        run: grunt lint
